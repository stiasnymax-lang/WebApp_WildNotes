<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Firebase Auth"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.LoginActivity" />
        <activity android:name=".auth.RegisterActivity" />
        <activity android:name=".core.HomeActivity" />
        <activity android:name=".feature_animals.AddAnimalActivity" />
        <activity android:name=".feature_events.AddEventActivity" />
        <activity android:name=".feature_animals.AnimalActivity" />
        <activity android:name=".feature_animals.EditAnimalActivity" />
        <activity android:name=".feature_events.EditEventActivity" />
        <activity android:name=".core.EnclosureActivity" />
        <activity android:name=".feature_events.EventActivity" />
        <activity android:name=".core.LibraryActivity" />
        <activity android:name=".core.MapActivity" />
        <activity android:name=".core.SettingsActivity" />
    </application>

</manifest>